{
  "name": "llmcopy",
  "displayName": "LLMCopy",
  "description": "Copy file(s)/folder(s) as an AI prompt: tree, files, diagnostics.",
  "version": "0.0.1",
  "engines": { "vscode": "^1.96.0" },
  "repository": { "type": "git", "url": "https://github.com/srjrol/llm-copy.git" },
  "categories": ["Other"],
  "main": "./dist/extension.js",

  "activationEvents": [
    "onCommand:copyAsPrompt.copyAll",
    "onCommand:copyAsPrompt.copyTree",
    "onCommand:copyAsPrompt.copyFiles",
    "onCommand:copyAsPrompt.copyDiagnostics"
  ],

  "contributes": {
    "commands": [
      {
        "command": "copyAsPrompt.copyAll",
        "title": "LLM Copy: Tree + Files + Diagnostics",
        "category": "LLM Copy"
      },
      {
        "command": "copyAsPrompt.copyTree",
        "title": "LLM Copy: Tree only",
        "category": "LLM Copy"
      },
      {
        "command": "copyAsPrompt.copyFiles",
        "title": "LLM Copy: Files only",
        "category": "LLM Copy"
      },
      {
        "command": "copyAsPrompt.copyDiagnostics",
        "title": "LLM Copy: Diagnostics only",
        "category": "LLM Copy"
      }
    ],
    "menus": {
      "explorer/context": [
        { "command": "copyAsPrompt.copyAll", "group": "navigation@9", "when": "explorerResourceIsFolder || resourceExtname" },
        { "command": "copyAsPrompt.copyTree", "group": "navigation@9", "when": "explorerResourceIsFolder || resourceExtname" },
        { "command": "copyAsPrompt.copyFiles", "group": "navigation@9", "when": "explorerResourceIsFolder || resourceExtname" },
        { "command": "copyAsPrompt.copyDiagnostics", "group": "navigation@9", "when": "explorerResourceIsFolder || resourceExtname" }
      ],
      "editor/context": [
        { "command": "copyAsPrompt.copyAll", "group": "navigation@9" },
        { "command": "copyAsPrompt.copyFiles", "group": "navigation@9" },
        { "command": "copyAsPrompt.copyDiagnostics", "group": "navigation@9" }
      ],
      "commandPalette": [
        { "command": "copyAsPrompt.copyAll", "when": "true" },
        { "command": "copyAsPrompt.copyTree", "when": "true" },
        { "command": "copyAsPrompt.copyFiles", "when": "true" },
        { "command": "copyAsPrompt.copyDiagnostics", "when": "true" }
      ]
    },
    "keybindings": [
      { "command": "copyAsPrompt.copyAll", "key": "ctrl+alt+c", "mac": "cmd+alt+c", "when": "editorTextFocus || filesExplorerFocus" }
    ]
  },

  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
